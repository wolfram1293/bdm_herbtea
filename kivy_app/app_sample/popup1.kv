        Label:
            font_size: 30
            text: "ラベンダーの茶葉"
        Button:
            font_size: 40
            size_hint: 0.5, 0.95
            text: "ブレンドを\n\n開始する"
            on_press: app.root.change_disp2(10); app.root.popup_close1(); app.root.move_dcmoter(12);

