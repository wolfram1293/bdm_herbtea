<Popup1@Popup>
    title: "カモミールとランベンダー"
    id:pop
    size_hint: .8, .8

    BoxLayout:
        Label:
            font_size: 30
            text: "カモミールとランベンダ\nのブレンド。ハーブティー\nの中でもトップクラスにリ\nラックス効果が期待できる\n。華やかな甘い香りととも\nに、ゆったりとしたひとと\nきを。"
        Button:
            font_size: 40
            size_hint: 0.5, 0.95
            text: "ブレンドを\n\n開始する"
            on_press: app.root.change_disp2(10); app.root.popup_close1(); app.start_chamo_and_lava(10);

