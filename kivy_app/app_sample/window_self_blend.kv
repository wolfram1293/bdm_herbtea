<WindowSelfBlend@FloatLayout>

    ActionBar:
        ActionView:

            ActionPrevious:
                title: 'ウィンドウ-セルフブレンド'
                with_previous: False

    FloatLayout:
        canvas:
            Rectangle:
                source: "./image/tea_background5.jpg"
                pos: self.pos
                size: self.size

        Label:
            font_size: 50
            markup: True
            text: "[color=000000][i]セルフブレンド[/i][/color]"
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: 1, 0.1

        Button:
            font_size: 25
            background_normal: './image/button_norm.png'
            background_down: './image/button_norm.png'
            text: "ブレンド\n　開始"
            pos_hint: {'center_x': 0.9, 'center_y': 0.9}
            size_hint: 0.18, 0.18
            on_press: app.start_self_blend(); app.root.change_disp2(app.lavandula_num + app.chamomile_num + app.rose_num*3 + app.blue_num*3);
        
        Button:
            font_size: 25
            background_normal: './image/button_norm.png'
            background_down: './image/button_norm.png'
            text: "前のページ\n　に戻る"
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            size_hint: 0.18, 0.18
            on_press: app.root.show_top(); 


        # ラベンダ
        Button:
            text: ""
            pos_hint: {'center_x': 0.25, 'center_y': 0.25}
            size_hint: 0.25, 0.25
            canvas:
                Rectangle:
                    source: "./image/lavender.jpg"
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

        Button:
            background_color: 1, 1, 1, 0
            text: ""
            pos_hint: {'center_x': 0.35, 'center_y': 0.08}
            size_hint: 0.05, 0.08
            on_press: app.lavandula_add();
            canvas:
                Rectangle:
                    source: "./image/plus.png"
                    pos: self.pos
                    size: self.size

        Button:
            background_color: 1, 1, 1, 0
            text: ""
            pos_hint: {'center_x': 0.15, 'center_y': 0.08}
            size_hint: 0.05, 0.08
            on_press: app.lavandula_delt();
            canvas:
                Rectangle:
                    source: "./image/minus.png"
                    pos: self.pos
                    size: self.size

        Button:
            background_color: 1, 1, 1, 1
            text: app.lavandula_text
            font_size: 30
            pos_hint: {"center_x": 0.25, "center_y": 0.08}
            size_hint: 0.05, 0.08



        # カモミール
